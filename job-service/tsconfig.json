{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",                              
    "module": "NodeNext",                      
    "moduleResolution": "nodenext",
    // "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": [
      "ESNext"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
	"include": [
    "src/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/*.test.ts",
  ],
  "baseUrl": "./",
  "paths": {
    "@breakdown-services/shared/": ["../shared/"]
  }
}